# vlk prompt

[[ "$VLK_PROMPT" != 'zsh' ]] && return

# VI mode prompt {{{

function zle-line-init zle-keymap-select {
    PROMPT="$BASEPROMPT"
    PROMPT="${${KEYMAP/vicmd/${PROMPT_VIM_MODE_TEXT}${PROMPT}}/(main|viins)/$PROMPT}"
    zle reset-prompt
}

zle -N zle-line-init
zle -N zle-keymap-select

# }}}
# precmd {{{

__vlk_prompt_func () {
    psvar[135]=''
    /usr/bin/sudo -vn &> /dev/null && psvar[135]=1
}
precmd_functions+=(
    '__vlk_prompt_func'
)

