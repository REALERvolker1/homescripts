# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        #output_format = i3bar
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"
order += "battery all"

wireless _first_ {
        format_up = "WLAN %bitrate"
        format_down = "W"

        format_bitrate = "%g %cb/s"
}

battery all {
        format = "%status %percentage"
        format_down = "NO BAT"
        format_percentage = "%.00f%s"
        last_full_capacity = true

        status_chr = "CHARGING"
        status_bat = "BAT"
        status_unk = "UNKNOWN"
        status_full = "FULL"
        low_threshold = 25
        threshold_type = percentage
}

load {
        format = "LOAD %1min"
}

volume master {
    device = "pulse"
    format = "VOL: %volume"
    format_muted = "MUTE"
}

memory {
        format = "MEM %used (SHMEM %percentage_shared)"
        threshold_degraded = "25%"
        threshold_critical = "10%"
        format_degraded = "LOW MEM (%used), AVAIL (%available)"
        #color_good = "#00FF00"
        #color_degraded = "#FFFF00"
        #color_bad = "#FF0000"
}

tztime local {
        format = "%a %-m/%-d @ %-I:%M %p"
}
