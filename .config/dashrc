#!/dev/null
# vlk's rcfile for the dash shell -- envirnoment variable ENV must point to this file for it to work
# shellcheck shell=dash disable=2139,2154,1091
# vim:foldmethod=marker:ft=sh

if [ -n "${BASH_VERSION:-$ZSH_VERSION}" ] || [ -n "${DASHRC_LOADED:-}" ] || [ "${-#*i}" = "$-" ]; then
    echo "skipping dashrc"
    return
    exit
fi

. "$HOME/bin/vlkenv"

__lscmd="$(which ls) --color=auto --group-directories-first"

alias ls="${LS_COMMAND:=$__lscmd -A}"
alias ll="${LL_COMMAND:=$__lscmd -Al}"
alias la="${LA_COMMAND:=$__lscmd -a}"

unset __lscmd

alias -='cd -'

alias echo="$(which echo)"
alias q=exit
alias rm='rm -i'

PS1='$(
    r="$?"
    i="$(/bin/echo "$PWD" | sed "s|^$HOME|~|") \$"
    [ "$r" -ne 0 ] && i="[$r] $i"
    tput sgr0 ; tput bold
    echo -n "$i "
    tput sgr0
)'

echo 'loaded dashrc'
DASHRC_LOADED=true
