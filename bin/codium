#!/usr/bin/bash

# flatpak --user override com.vscodium.codium --env=PATH=/app/bin:/usr/bin:$HOME/bin:$CARGO_HOME/bin:$PNPM_HOME

if [ -z "$WAYLAND_DISPLAY" ]; then
    electron_flags=''
else
    electron_flags=' --enable-features=UseOzonePlatform --ozone-platform=wayland'
fi

# "$HOME/.local/opt/vscodium/bin/codium"
codium_command="flatpak run com.vscodium.codium${electron_flags}"

exec $codium_command $@


