run-subshell() {
    local stty cmd
    [[ -t 0 ]] && stty="$(stty --save)"
    cmd="${1:-}"
    [[ ${cmd:-} =~ (|t)csh ]] && echo ðŸ’€
    command -v "$cmd" >/dev/null || return
    shift 1
    HISTFILE="${SHELLHIST:-/dev/null}" $cmd "$@"
    local -i retval="$?"
    [[ -n ${stty:-} ]] && stty "$stty"
    return $retval
}

for i in {{b,d,}a,{,r}k,{,t}c,z}sh; do
    alias "$i=run-subshell $i"
done

venv() {
    local venv="$PWD/venv"
    local venvb="$venv/bin/activate"
    if [[ -f "$venvb" ]]; then
        source "$venvb"
    else
        python -m venv "$venv"
        if [[ -f "$venvb" ]]; then
            source "$venvb"
        else
            echo "Error, failed to find python venv"
            return 1
        fi
    fi
}

