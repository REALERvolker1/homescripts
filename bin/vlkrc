    [[ -e "$i" ]] && rmf "$i"
done

__touchx() {
    local op="${1#touch}"
    shift 1

    local editor
    if [[ "$op" == *c ]]; then
        editor=codium
    elif [[ "$op" == *v ]]; then
        editor="${EDITOR:-vim}"
    else
        editor=echo
    fi

    for file in "$@"; do
        touch "$file"
        [[ "$op" == x* ]] && chmod +x "$file"
        $editor "$file"
    done
}

for i in touch{x{,c,v},c,v}; do
    alias "$i=__touchx $i"
done

